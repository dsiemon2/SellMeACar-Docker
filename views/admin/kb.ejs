<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Knowledge Base - Ford Auto Sales Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'kb' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-book text-primary me-2"></i>Knowledge Base</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newDocModal" title="Create a new knowledge base article">
            <i class="bi bi-plus-lg"></i> New Article
          </button>
        </div>

        <!-- Toast container -->
        <div class="toast-container"></div>

        <!-- Bulk Actions Toolbar -->
        <div class="bulk-actions mb-3 align-items-center" id="bulkActions">
          <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
          <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete selected articles" onclick="deleteSelected()">
            <i class="bi bi-trash"></i> Delete Selected
          </button>
        </div>

        <!-- Stats Cards -->
        <div class="row g-3 mb-4">
          <div class="col-md-3">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="bi bi-file-text text-primary" style="font-size: 2rem;"></i>
                <h4 class="mt-2"><%= docs.length %></h4>
                <small class="text-muted">Total Articles</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="bi bi-puzzle text-info" style="font-size: 2rem;"></i>
                <h4 class="mt-2"><%= totalChunks %></h4>
                <small class="text-muted">Total Chunks</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="bi bi-translate text-success" style="font-size: 2rem;"></i>
                <h4 class="mt-2"><%= languages.length %></h4>
                <small class="text-muted">Languages</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center h-100">
              <div class="card-body">
                <i class="bi bi-car-front text-warning" style="font-size: 2rem;"></i>
                <h4 class="mt-2">Ford</h4>
                <small class="text-muted">Sales KB</small>
              </div>
            </div>
          </div>
        </div>

        <!-- KB Articles Table -->
        <div class="card">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i>Articles</h5>
            <div>
              <select class="form-select form-select-sm d-inline-block" style="width: auto;" id="languageFilter" onchange="filterByLanguage()">
                <option value="">All Languages</option>
                <% languages.forEach(lang => { %>
                <option value="<%= lang.code %>"><%= lang.flag %> <%= lang.name %></option>
                <% }); %>
              </select>
            </div>
          </div>
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Title</th>
                  <th>Slug</th>
                  <th>Language</th>
                  <th>Chunks</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <% if (docs.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-journal-x" style="font-size: 2rem;"></i>
                    <p class="mt-2 mb-0">No knowledge base articles yet. Create your first article!</p>
                  </td>
                </tr>
                <% } else { %>
                <% docs.forEach(doc => { %>
                <tr data-id="<%= doc.id %>" data-language="<%= doc.language %>">
                  <td>
                    <input type="checkbox" class="form-check-input row-checkbox" data-id="<%= doc.id %>">
                  </td>
                  <td><strong><%= doc.title %></strong></td>
                  <td><code><%= doc.slug %></code></td>
                  <td>
                    <% const lang = languages.find(l => l.code === doc.language); %>
                    <span class="badge bg-secondary"><%= lang ? lang.flag + ' ' + lang.name : doc.language %></span>
                  </td>
                  <td><span class="badge bg-info"><%= doc._count?.chunks || 0 %></span></td>
                  <td><%= new Date(doc.createdAt).toLocaleDateString() %></td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Edit article" onclick="editDoc('<%= doc.id %>')">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete article" onclick="deleteDoc('<%= doc.id %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }); %>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination Footer -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= Math.min(docs.length, 10) %></span> of <span id="totalRows"><%= docs.length %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
              </ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- New Article Modal -->
  <div class="modal fade" id="newDocModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>New Knowledge Base Article</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="newDocForm">
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-8">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" name="title" required placeholder="e.g., Ford F-150 Features">
              </div>
              <div class="col-md-4">
                <label class="form-label">Language</label>
                <select class="form-select" name="language" required>
                  <% languages.forEach(lang => { %>
                  <option value="<%= lang.code %>" <%= lang.code === 'en' ? 'selected' : '' %>><%= lang.flag %> <%= lang.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">Slug</label>
                <input type="text" class="form-control" name="slug" required placeholder="ford-f150-features">
                <small class="text-muted">URL-friendly identifier (auto-generated from title if left empty)</small>
              </div>
              <div class="col-12">
                <label class="form-label">Content</label>
                <textarea class="form-control" name="content" rows="10" required placeholder="Enter the knowledge base content here..."></textarea>
                <small class="text-muted">This content will be chunked and embedded for AI retrieval</small>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Save article"><i class="bi bi-save me-1"></i>Save Article</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Article Modal -->
  <div class="modal fade" id="editDocModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Knowledge Base Article</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="editDocForm">
          <input type="hidden" name="id" id="editDocId">
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-8">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="editTitle" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Language</label>
                <select class="form-select" name="language" id="editLanguage" required>
                  <% languages.forEach(lang => { %>
                  <option value="<%= lang.code %>"><%= lang.flag %> <%= lang.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">Slug</label>
                <input type="text" class="form-control" name="slug" id="editSlug" required>
              </div>
              <div class="col-12">
                <label class="form-label">Content</label>
                <textarea class="form-control" name="content" id="editContent" rows="10" required></textarea>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Update article"><i class="bi bi-save me-1"></i>Update Article</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const token = '<%= token %>';
    let currentPage = 1;
    let pageSize = 10;
    let allRows = [];

    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

      // Auto-generate slug from title
      document.querySelector('input[name="title"]').addEventListener('input', (e) => {
        const slugInput = document.querySelector('#newDocForm input[name="slug"]');
        if (!slugInput.dataset.userEdited) {
          slugInput.value = e.target.value.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');
        }
      });

      document.querySelector('#newDocForm input[name="slug"]').addEventListener('input', (e) => {
        e.target.dataset.userEdited = 'true';
      });

      setupPagination();
    });

    function setupPagination() {
      allRows = Array.from(document.querySelectorAll('#tableBody tr[data-id]'));
      document.getElementById('pageSize').addEventListener('change', (e) => {
        pageSize = parseInt(e.target.value);
        currentPage = 1;
        renderPage();
      });
      renderPage();
    }

    function renderPage() {
      const start = (currentPage - 1) * pageSize;
      const end = start + pageSize;
      const totalPages = Math.ceil(allRows.length / pageSize);

      allRows.forEach((row, i) => {
        row.style.display = (i >= start && i < end) ? '' : 'none';
      });

      document.getElementById('showingStart').textContent = allRows.length ? start + 1 : 0;
      document.getElementById('showingEnd').textContent = Math.min(end, allRows.length);
      document.getElementById('totalRows').textContent = allRows.length;

      const pagination = document.getElementById('pagination');
      pagination.innerHTML = '';

      if (totalPages <= 1) return;

      const prevLi = document.createElement('li');
      prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
      prevLi.innerHTML = `<a class="page-link" href="#">&laquo;</a>`;
      prevLi.addEventListener('click', (e) => { e.preventDefault(); if (currentPage > 1) { currentPage--; renderPage(); } });
      pagination.appendChild(prevLi);

      for (let i = 1; i <= totalPages; i++) {
        const li = document.createElement('li');
        li.className = `page-item ${i === currentPage ? 'active' : ''}`;
        li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
        li.addEventListener('click', (e) => { e.preventDefault(); currentPage = i; renderPage(); });
        pagination.appendChild(li);
      }

      const nextLi = document.createElement('li');
      nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
      nextLi.innerHTML = `<a class="page-link" href="#">&raquo;</a>`;
      nextLi.addEventListener('click', (e) => { e.preventDefault(); if (currentPage < totalPages) { currentPage++; renderPage(); } });
      pagination.appendChild(nextLi);
    }

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `
        <div class="d-flex">
          <div class="toast-body">${message}</div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      `;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    // Select all checkbox
    document.getElementById('selectAll').addEventListener('change', (e) => {
      document.querySelectorAll('.row-checkbox').forEach(cb => {
        cb.checked = e.target.checked;
        cb.closest('tr').classList.toggle('selected', e.target.checked);
      });
      updateBulkActions();
    });

    // Individual row checkboxes
    document.querySelectorAll('.row-checkbox').forEach(cb => {
      cb.addEventListener('change', (e) => {
        e.target.closest('tr').classList.toggle('selected', e.target.checked);
        updateBulkActions();
      });
    });

    function updateBulkActions() {
      const selected = document.querySelectorAll('.row-checkbox:checked').length;
      document.getElementById('selectedCount').textContent = selected;
      document.getElementById('bulkActions').classList.toggle('show', selected > 0);
    }

    function filterByLanguage() {
      const filter = document.getElementById('languageFilter').value;
      document.querySelectorAll('#tableBody tr[data-language]').forEach(row => {
        row.style.display = !filter || row.dataset.language === filter ? '' : 'none';
      });
    }

    // Create new article
    document.getElementById('newDocForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = Object.fromEntries(new FormData(form));

      try {
        const res = await fetch(`/admin/kb?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          showToast('Article created successfully!');
          setTimeout(() => location.reload(), 1000);
        } else {
          const err = await res.json();
          showToast(err.error || 'Failed to create article', 'danger');
        }
      } catch (err) {
        showToast('Failed to create article', 'danger');
      }
    });

    // Edit article
    async function editDoc(id) {
      try {
        const res = await fetch(`/admin/kb/${id}?token=${token}`);
        if (res.ok) {
          const doc = await res.json();
          document.getElementById('editDocId').value = doc.id;
          document.getElementById('editTitle').value = doc.title;
          document.getElementById('editSlug').value = doc.slug;
          document.getElementById('editLanguage').value = doc.language;
          document.getElementById('editContent').value = doc.content;
          new bootstrap.Modal(document.getElementById('editDocModal')).show();
        }
      } catch (err) {
        showToast('Failed to load article', 'danger');
      }
    }

    // Update article
    document.getElementById('editDocForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = Object.fromEntries(new FormData(form));
      const id = data.id;
      delete data.id;

      try {
        const res = await fetch(`/admin/kb/${id}?token=${token}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          showToast('Article updated successfully!');
          setTimeout(() => location.reload(), 1000);
        } else {
          const err = await res.json();
          showToast(err.error || 'Failed to update article', 'danger');
        }
      } catch (err) {
        showToast('Failed to update article', 'danger');
      }
    });

    // Delete article
    async function deleteDoc(id) {
      if (!confirm('Are you sure you want to delete this article?')) return;

      try {
        const res = await fetch(`/admin/kb/${id}?token=${token}`, {
          method: 'DELETE'
        });

        if (res.ok) {
          showToast('Article deleted successfully!');
          document.querySelector(`tr[data-id="${id}"]`).remove();
        } else {
          showToast('Failed to delete article', 'danger');
        }
      } catch (err) {
        showToast('Failed to delete article', 'danger');
      }
    }

    // Delete selected
    async function deleteSelected() {
      const selected = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => cb.dataset.id);
      if (selected.length === 0) return;

      if (!confirm(`Delete ${selected.length} selected article(s)?`)) return;

      for (const id of selected) {
        await deleteDoc(id);
      }
      updateBulkActions();
    }
  </script>
</body>
</html>
