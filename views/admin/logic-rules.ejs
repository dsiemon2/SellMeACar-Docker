<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logic Rules - Ford Auto Sales Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
    .rule-card { border-left: 4px solid #0d6efd; }
    .rule-card.inactive { border-left-color: #6c757d; opacity: 0.7; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'logic-rules' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-diagram-3 text-primary me-2"></i>Logic Rules</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ruleModal" title="Create a new logic rule">
            <i class="bi bi-plus-lg me-2"></i>Create Rule
          </button>
        </div>

        <div class="toast-container"></div>

        <div class="alert alert-info mb-4">
          <i class="bi bi-info-circle me-2"></i>
          Logic Rules define conditional behaviors for the AI - when certain conditions are met, specific actions are triggered.
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions mb-3" id="bulkActions">
          <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
          <button class="btn btn-sm btn-outline-danger" onclick="bulkDelete()" data-bs-toggle="tooltip" title="Delete selected">
            <i class="bi bi-trash"></i> Delete Selected
          </button>
        </div>

        <div class="card">
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Rule Name</th>
                  <th>Condition</th>
                  <th>Action</th>
                  <th>Priority</th>
                  <th>Triggers</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="rulesTable">
                <% rules.forEach(rule => { %>
                <tr data-id="<%= rule.id %>">
                  <td><input type="checkbox" class="form-check-input row-checkbox"></td>
                  <td><strong><%= rule.name %></strong></td>
                  <td><code class="small"><%= rule.condition %></code></td>
                  <td><span class="badge bg-primary"><%= rule.action %></span></td>
                  <td><%= rule.priority %></td>
                  <td><%= rule.triggerCount || 0 %></td>
                  <td>
                    <span class="badge bg-<%= rule.enabled ? 'success' : 'secondary' %>">
                      <%= rule.enabled ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary" onclick="editRule('<%= rule.id %>')" data-bs-toggle="tooltip" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" onclick="toggleRule('<%= rule.id %>')" data-bs-toggle="tooltip" title="Toggle">
                      <i class="bi bi-toggle-on"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" onclick="deleteRule('<%= rule.id %>')" data-bs-toggle="tooltip" title="Delete">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= rules.length %></span> of <span id="totalRows"><%= rules.length %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>

        <!-- Example Rules -->
        <div class="card mt-4">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Example Rules</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="card rule-card">
                  <div class="card-body">
                    <h6>Budget Qualifier</h6>
                    <p class="small text-muted mb-1"><strong>IF:</strong> customer mentions "budget" or "afford"</p>
                    <p class="small text-muted mb-0"><strong>THEN:</strong> Ask about financing options and show payment calculator</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="card rule-card">
                  <div class="card-body">
                    <h6>Trade-In Detection</h6>
                    <p class="small text-muted mb-1"><strong>IF:</strong> customer mentions "trade" or "current car"</p>
                    <p class="small text-muted mb-0"><strong>THEN:</strong> Offer trade-in valuation and capture vehicle details</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="card rule-card">
                  <div class="card-body">
                    <h6>Urgent Buyer</h6>
                    <p class="small text-muted mb-1"><strong>IF:</strong> customer mentions "today" or "asap" or "urgent"</p>
                    <p class="small text-muted mb-0"><strong>THEN:</strong> Prioritize immediate availability and fast-track process</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="card rule-card">
                  <div class="card-body">
                    <h6>Family Vehicle</h6>
                    <p class="small text-muted mb-1"><strong>IF:</strong> customer mentions "family" or "kids" or "car seats"</p>
                    <p class="small text-muted mb-0"><strong>THEN:</strong> Highlight safety features and space/comfort options</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add/Edit Rule Modal -->
  <div class="modal fade" id="ruleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-diagram-3 me-2"></i>Create Logic Rule</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="ruleForm">
            <input type="hidden" id="ruleId">
            <div class="row">
              <div class="col-md-8">
                <div class="mb-3">
                  <label class="form-label">Rule Name</label>
                  <input type="text" class="form-control" id="ruleName" placeholder="Budget Qualifier" required>
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label class="form-label">Priority (1-10)</label>
                  <input type="number" class="form-control" id="rulePriority" value="5" min="1" max="10">
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Condition Type</label>
              <select class="form-select" id="ruleConditionType" onchange="updateConditionBuilder()">
                <option value="keyword">Keyword Match</option>
                <option value="sentiment">Sentiment Detection</option>
                <option value="intent">Intent Classification</option>
                <option value="context">Context Variable</option>
                <option value="custom">Custom Expression</option>
              </select>
            </div>
            <div class="mb-3" id="conditionBuilder">
              <label class="form-label">Condition</label>
              <input type="text" class="form-control" id="ruleCondition" placeholder="budget, afford, price range">
              <div class="form-text">For keywords: comma-separated list. For custom: JavaScript expression.</div>
            </div>
            <div class="mb-3">
              <label class="form-label">Action Type</label>
              <select class="form-select" id="ruleActionType">
                <option value="respond">AI Response Guidance</option>
                <option value="tool">Call Tool/Function</option>
                <option value="transfer">Transfer Call</option>
                <option value="tag">Add Session Tag</option>
                <option value="webhook">Trigger Webhook</option>
                <option value="notify">Send Notification</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Action Details</label>
              <textarea class="form-control" id="ruleActionDetails" rows="3" placeholder="Describe what should happen when this rule triggers..."></textarea>
            </div>
            <div class="form-check mb-3">
              <input type="checkbox" class="form-check-input" id="ruleEnabled" checked>
              <label class="form-check-label">Enabled</label>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="saveRule()" data-bs-toggle="tooltip" title="Save rule">
            <i class="bi bi-save me-2"></i>Save
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const token = '<%= token %>';

    let currentPage = 1;
    let pageSize = 10;
    let allRows = [];

    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
      setupCheckboxes();
      setupPagination();
    });

    function setupPagination() {
      allRows = Array.from(document.querySelectorAll('#rulesTable tr'));
      document.getElementById('pageSize').addEventListener('change', (e) => {
        pageSize = parseInt(e.target.value);
        currentPage = 1;
        renderPage();
      });
      renderPage();
    }

    function renderPage() {
      const start = (currentPage - 1) * pageSize;
      const end = start + pageSize;
      const totalPages = Math.ceil(allRows.length / pageSize);

      allRows.forEach((row, i) => {
        row.style.display = (i >= start && i < end) ? '' : 'none';
      });

      document.getElementById('showingStart').textContent = allRows.length ? start + 1 : 0;
      document.getElementById('showingEnd').textContent = Math.min(end, allRows.length);
      document.getElementById('totalRows').textContent = allRows.length;

      const pagination = document.getElementById('pagination');
      pagination.innerHTML = '';

      if (totalPages <= 1) return;

      const prevLi = document.createElement('li');
      prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
      prevLi.innerHTML = `<a class="page-link" href="#">&laquo;</a>`;
      prevLi.addEventListener('click', (e) => { e.preventDefault(); if (currentPage > 1) { currentPage--; renderPage(); } });
      pagination.appendChild(prevLi);

      for (let i = 1; i <= totalPages; i++) {
        const li = document.createElement('li');
        li.className = `page-item ${i === currentPage ? 'active' : ''}`;
        li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
        li.addEventListener('click', (e) => { e.preventDefault(); currentPage = i; renderPage(); });
        pagination.appendChild(li);
      }

      const nextLi = document.createElement('li');
      nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
      nextLi.innerHTML = `<a class="page-link" href="#">&raquo;</a>`;
      nextLi.addEventListener('click', (e) => { e.preventDefault(); if (currentPage < totalPages) { currentPage++; renderPage(); } });
      pagination.appendChild(nextLi);
    }

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    function setupCheckboxes() {
      const selectAll = document.getElementById('selectAll');
      const checkboxes = document.querySelectorAll('.row-checkbox');

      selectAll.addEventListener('change', () => {
        checkboxes.forEach(cb => {
          cb.checked = selectAll.checked;
          cb.closest('tr').classList.toggle('selected', selectAll.checked);
        });
        updateBulkActions();
      });

      checkboxes.forEach(cb => {
        cb.addEventListener('change', () => {
          cb.closest('tr').classList.toggle('selected', cb.checked);
          updateBulkActions();
        });
      });
    }

    function updateBulkActions() {
      const selected = document.querySelectorAll('.row-checkbox:checked').length;
      document.getElementById('selectedCount').textContent = selected;
      document.getElementById('bulkActions').classList.toggle('show', selected > 0);
    }

    function updateConditionBuilder() {
      const type = document.getElementById('ruleConditionType').value;
      const input = document.getElementById('ruleCondition');
      const hint = input.nextElementSibling;

      switch(type) {
        case 'keyword':
          input.placeholder = 'budget, afford, price range';
          hint.textContent = 'Comma-separated keywords to match';
          break;
        case 'sentiment':
          input.placeholder = 'negative, frustrated, confused';
          hint.textContent = 'Sentiment types to detect';
          break;
        case 'intent':
          input.placeholder = 'financing_inquiry, trade_in, test_drive';
          hint.textContent = 'Intent labels to match';
          break;
        case 'context':
          input.placeholder = 'session.vehicleInterest == "truck"';
          hint.textContent = 'Context variable expression';
          break;
        case 'custom':
          input.placeholder = 'message.includes("urgent") && !context.appointmentSet';
          hint.textContent = 'JavaScript boolean expression';
          break;
      }
    }

    async function saveRule() {
      const id = document.getElementById('ruleId').value;
      const data = {
        name: document.getElementById('ruleName').value,
        priority: parseInt(document.getElementById('rulePriority').value),
        conditionType: document.getElementById('ruleConditionType').value,
        condition: document.getElementById('ruleCondition').value,
        actionType: document.getElementById('ruleActionType').value,
        action: document.getElementById('ruleActionDetails').value,
        enabled: document.getElementById('ruleEnabled').checked
      };

      try {
        const url = id ? `/admin/logic-rules/${id}?token=${token}` : `/admin/logic-rules?token=${token}`;
        const res = await fetch(url, {
          method: id ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        if (res.ok) {
          showToast('Rule saved!');
          location.reload();
        }
      } catch (err) {
        showToast('Error saving', 'danger');
      }
    }

    async function deleteRule(id) {
      if (!confirm('Delete this rule?')) return;
      try {
        const res = await fetch(`/admin/logic-rules/${id}?token=${token}`, { method: 'DELETE' });
        if (res.ok) {
          showToast('Deleted!');
          location.reload();
        }
      } catch (err) {
        showToast('Error deleting', 'danger');
      }
    }

    async function toggleRule(id) {
      try {
        const res = await fetch(`/admin/logic-rules/${id}/toggle?token=${token}`, { method: 'POST' });
        if (res.ok) location.reload();
      } catch (err) {
        showToast('Error toggling', 'danger');
      }
    }

    async function bulkDelete() {
      const ids = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => cb.closest('tr').dataset.id);
      if (!ids.length || !confirm(`Delete ${ids.length} rules?`)) return;
      try {
        const res = await fetch(`/admin/logic-rules/bulk-delete?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ids })
        });
        if (res.ok) {
          showToast('Deleted!');
          location.reload();
        }
      } catch (err) {
        showToast('Error deleting', 'danger');
      }
    }
  </script>
</body>
</html>
