<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dealership Settings - Auto Sales Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
    .color-preview { width: 40px; height: 40px; border-radius: 8px; border: 2px solid #dee2e6; }
    .dealership-type-card { cursor: pointer; transition: all 0.2s; border: 2px solid transparent; }
    .dealership-type-card:hover { border-color: #0d6efd; }
    .dealership-type-card.selected { border-color: #0d6efd; background-color: #e7f1ff; }
    .dealership-type-card .bi { font-size: 2rem; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'dealership' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-building text-primary me-2"></i>Dealership Settings</h2>

        <div class="toast-container"></div>

        <form id="dealershipForm">
          <div class="row">
            <div class="col-md-6">
              <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Basic Information</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Dealership Name</label>
                    <input type="text" class="form-control" id="name" value="<%= dealership?.name || '' %>" placeholder="e.g., City Ford, Tesla Downtown">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Tagline</label>
                    <input type="text" class="form-control" id="tagline" value="<%= dealership?.tagline || '' %>" placeholder="e.g., Your Trusted Auto Partner">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Location / Address</label>
                    <textarea class="form-control" id="location" rows="2" placeholder="Full address"><%= dealership?.location || '' %></textarea>
                  </div>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label class="form-label">Phone</label>
                      <input type="text" class="form-control" id="phone" value="<%= dealership?.phone || '' %>" placeholder="(555) 123-4567">
                    </div>
                    <div class="col-md-6 mb-3">
                      <label class="form-label">Email</label>
                      <input type="email" class="form-control" id="email" value="<%= dealership?.email || '' %>" placeholder="sales@dealer.com">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Website</label>
                    <input type="url" class="form-control" id="website" value="<%= dealership?.website || '' %>" placeholder="https://www.yourdealership.com">
                  </div>
                </div>
              </div>

              <div class="card mb-4">
                <div class="card-header bg-success text-white">
                  <h5 class="mb-0"><i class="bi bi-palette me-2"></i>Branding</h5>
                </div>
                <div class="card-body">
                  <div class="mb-3">
                    <label class="form-label">Logo URL</label>
                    <input type="url" class="form-control" id="logoUrl" value="<%= dealership?.logoUrl || '' %>" placeholder="https://example.com/logo.png">
                    <div class="form-text">URL to your dealership logo (PNG or SVG recommended)</div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Primary Brand Color</label>
                    <div class="d-flex align-items-center gap-3">
                      <input type="color" class="form-control form-control-color" id="primaryColor" value="<%= dealership?.primaryColor || '#1e40af' %>">
                      <div class="color-preview" id="colorPreview" style="background-color: <%= dealership?.primaryColor || '#1e40af' %>"></div>
                      <input type="text" class="form-control" id="primaryColorText" value="<%= dealership?.primaryColor || '#1e40af' %>" style="max-width: 120px;">
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card mb-4">
                <div class="card-header bg-info text-white">
                  <h5 class="mb-0"><i class="bi bi-car-front me-2"></i>Dealership Type</h5>
                </div>
                <div class="card-body">
                  <p class="text-muted mb-3">Select the type of dealership. This affects greeting messages and sales approach.</p>

                  <div class="row g-3" id="dealershipTypes">
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'ford' ? 'selected' : '' %>" data-type="ford">
                        <i class="bi bi-truck text-primary"></i>
                        <div class="mt-2 fw-bold">Ford</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'chevrolet' ? 'selected' : '' %>" data-type="chevrolet">
                        <i class="bi bi-car-front text-warning"></i>
                        <div class="mt-2 fw-bold">Chevrolet</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'tesla' ? 'selected' : '' %>" data-type="tesla">
                        <i class="bi bi-ev-front text-danger"></i>
                        <div class="mt-2 fw-bold">Tesla</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'toyota' ? 'selected' : '' %>" data-type="toyota">
                        <i class="bi bi-car-front-fill text-danger"></i>
                        <div class="mt-2 fw-bold">Toyota</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'honda' ? 'selected' : '' %>" data-type="honda">
                        <i class="bi bi-car-front-fill text-info"></i>
                        <div class="mt-2 fw-bold">Honda</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'luxury' ? 'selected' : '' %>" data-type="luxury">
                        <i class="bi bi-gem text-secondary"></i>
                        <div class="mt-2 fw-bold">Luxury</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'used' ? 'selected' : '' %>" data-type="used">
                        <i class="bi bi-arrow-repeat text-success"></i>
                        <div class="mt-2 fw-bold">Pre-Owned</div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="dealership-type-card card h-100 text-center p-3 <%= dealership?.dealershipType === 'multi_brand' || !dealership?.dealershipType ? 'selected' : '' %>" data-type="multi_brand">
                        <i class="bi bi-collection text-primary"></i>
                        <div class="mt-2 fw-bold">Multi-Brand</div>
                      </div>
                    </div>
                  </div>

                  <input type="hidden" id="dealershipType" value="<%= dealership?.dealershipType || 'multi_brand' %>">
                </div>
              </div>

              <div class="card">
                <div class="card-header bg-warning text-dark">
                  <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Tips</h5>
                </div>
                <div class="card-body">
                  <ul class="mb-0">
                    <li><strong>Name:</strong> Use your official dealership name for consistency.</li>
                    <li><strong>Location:</strong> Include full address for AI greeting personalization.</li>
                    <li><strong>Type:</strong> Selecting the right type customizes the AI's sales approach.</li>
                    <li><strong>Branding:</strong> Your logo appears in customer-facing interfaces.</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary btn-lg" data-bs-toggle="tooltip" title="Save dealership settings">
            <i class="bi bi-save me-2"></i>Save Dealership Settings
          </button>
        </form>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const token = '<%= token %>';

    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
    });

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    // Dealership type selection
    document.querySelectorAll('.dealership-type-card').forEach(card => {
      card.addEventListener('click', () => {
        document.querySelectorAll('.dealership-type-card').forEach(c => c.classList.remove('selected'));
        card.classList.add('selected');
        document.getElementById('dealershipType').value = card.dataset.type;
      });
    });

    // Color picker sync
    document.getElementById('primaryColor').addEventListener('input', (e) => {
      document.getElementById('colorPreview').style.backgroundColor = e.target.value;
      document.getElementById('primaryColorText').value = e.target.value;
    });

    document.getElementById('primaryColorText').addEventListener('input', (e) => {
      if (/^#[0-9A-Fa-f]{6}$/.test(e.target.value)) {
        document.getElementById('primaryColor').value = e.target.value;
        document.getElementById('colorPreview').style.backgroundColor = e.target.value;
      }
    });

    document.getElementById('dealershipForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      try {
        const res = await fetch(`/admin/dealership?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: document.getElementById('name').value,
            tagline: document.getElementById('tagline').value,
            location: document.getElementById('location').value,
            phone: document.getElementById('phone').value,
            email: document.getElementById('email').value,
            website: document.getElementById('website').value,
            logoUrl: document.getElementById('logoUrl').value,
            primaryColor: document.getElementById('primaryColor').value,
            dealershipType: document.getElementById('dealershipType').value
          })
        });

        if (res.ok) {
          showToast('Dealership settings saved successfully!');
        } else {
          showToast('Failed to save', 'danger');
        }
      } catch (err) {
        showToast('Error saving', 'danger');
      }
    });
  </script>
</body>
</html>
